@model IEnumerable<CoffeeMap.Models.CoffeeShop>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Додати кав'ярню</a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
    @foreach (var shop in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(shop.ImageUrl))
                {
                    <img src="@shop.ImageUrl" class="card-img-top" style="object-fit:cover;height:180px" alt="@shop.Name" />
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@shop.Name</h5>
                    <p class="mb-1"><strong>Адрес:</strong> @shop.Address</p>
                    <p class="mb-1"><strong>Телефон:</strong> @shop.Phone</p>
                    <div class="mt-auto d-flex gap-2">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@shop.Id">Деталі</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@shop.Id">Редагувати</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@shop.Id">Видалити</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
